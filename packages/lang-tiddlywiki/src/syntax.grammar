@top Program { expression* }

@skip { space }

expression {
  Heading1 |
  Heading2 |
  List |
  LineComment |
  Definition |
  Blockquote
}

@tokens {
  Heading1 { "! " }

  Heading2 { "!! " ![\n]* }

  Blockquote { ">" }
  LineComment { "<!--" ![\n]* "-->" }
  Definition { ";" ![\n]* }
  List { '#' }

  space { $[ \t\n\r]+ }
}

@detectDelim