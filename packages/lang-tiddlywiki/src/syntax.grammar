@top Program { expression* }

@skip { space | LineComment }

expression {
  Identifier |
  String |
  Heading1 |
  Heading2 |
  List
  Application { "(" expression* ")" }
}

@tokens {
  Identifier { $[a-zA-Z_\-0-9]+ }

  String { '"' (!["\\] | "\\" _)* '"' }

  Heading1 { "!" }

  Heading2 { "!!" }

  List { '#' }

  LineComment { ";" ![\n]* }

  space { $[ \t\n\r]+ }

  "(" ")"
}

@detectDelim