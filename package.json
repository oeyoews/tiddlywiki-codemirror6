{
  "url": "https://github.com/oeyoews/tiddlywiki-codemirror6",
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT",
  "version": "0.5.25",
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "bump": "node scripts/bump.js",
    "dev": "tiddlywiki-plugin-dev dev",
    "build": "npm run clean && tiddlywiki-plugin-dev build",
    "publish": "npm run clean && tiddlywiki-plugin-dev publish",
    "clean": "rimraf dist",
    "format": "prettier . --write",
    "minify": "node scripts/minify.js",
    "update": "pnpm update --lastet",
    "new": "tiddlywiki-plugin-dev new",
    "build:library": "npm run clean && tiddlywiki-plugin-dev build --library --output dist/library",
    "publish:offline": "npm run clean && tiddlywiki-plugin-dev publish --offline"
  },
  "prettier": "@oeyoews/prettier-config",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@modern-js/eslint-config": "^2.45.0",
    "@modern-js/tsconfig": "^2.45.0",
    "@oeyoews/prettier-config": "^1.0.2",
    "@oeyoews/tw5-typed": "^0.4.4",
    "@replit/codemirror-minimap": "^0.5.2",
    "@types/node": "^20.11.0",
    "@uiw/codemirror-extensions-color": "^4.21.21",
    "@uiw/codemirror-theme-github": "^4.21.21",
    "@uiw/codemirror-theme-material": "^4.21.21",
    "codemirror-lang-tiddlywiki": "workspace:^",
    "rimraf": "^5.0.5",
    "terser": "^5.26.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@codemirror/autocomplete": "github:codemirror/autocomplete",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.7",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/language": "^6.10.0",
    "@codemirror/language-data": "^6.3.1",
    "@codemirror/legacy-modes": "github:codemirror/legacy-modes",
    "@codemirror/lint": "^6.4.2",
    "@codemirror/search": "^6.5.5",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.23.0",
    "@lezer/common": "^1.2.0",
    "@lezer/highlight": "^1.2.0",
    "@lezer/markdown": "^1.2.0",
    "@oeyoews/tiddlywiki-plugin-dev": "^0.0.40",
    "@replit/codemirror-emacs": "^6.0.1",
    "@replit/codemirror-indentation-markers": "^6.5.0",
    "@replit/codemirror-interact": "^6.3.0",
    "@replit/codemirror-vim": "^6.1.0",
    "@replit/codemirror-vscode-keymap": "^6.0.2",
    "codemirror-extension-inline-suggestion": "^0.0.1",
    "ipad-cursor": "^0.5.2",
    "thememirror": "^2.0.1",
    "tiddlywiki": "^5.3.3",
    "x-data-spreadsheet": "^1.1.9"
  }
}